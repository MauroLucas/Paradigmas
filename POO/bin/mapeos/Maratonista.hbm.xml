<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
	"http://www.hibernate.org/dtd//hibernate-mapping-3.0.dtd" >
	
<hibernate-mapping>
	<class name="datos.Maratonista" table="maratonista">
	<id column="idMaratonista" name="idMaratonista">
	<generator class="identity"/>
	</id>
	<property column="nombres" name="nombres" type="string"></property>
	<property column="apellido" name="apellido" type="string"></property>
	<property column="dni" name="dni" type="int"></property>
	<property column="sexo" name="sexo" type="char"></property>	
	<property column="nroChip" name="nroChip" type="int"></property>
	<property column="tiempo" name="tiempo" type="LocalTime"></property>		
	</class>
</hibernate-mapping>